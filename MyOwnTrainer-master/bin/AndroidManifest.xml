<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.example.sportshack">

    <uses-sdk android:minSdkVersion="16" android:targetSdkVersion="21"/>

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="com.example.sportshack.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/title_activity_excercises" android:name="com.example.sportshack.ExcerciseListActivity">
        </activity>
        <activity android:label="@string/title_activity_progress_activities" android:name="com.example.sportshack.ProgressActivity">
        </activity>
        <activity android:label="@string/title_activity_friends" android:name="com.example.sportshack.FriendsActivity">
        </activity>
        <activity android:label="@string/title_activity_leader_board" android:name="com.example.sportshack.LeaderBoardActivity">
        </activity>
        <activity android:label="@string/title_activity_excercise" android:name="com.example.sportshack.ExcerciseActivity">
        </activity>

        <activity android:label="@string/myosdk__title_activity_scan" android:name="com.thalmic.myo.scanner.ScanActivity" android:theme="@style/myosdk__ScanActivityTheme"/>
    </application>

</manifest>
